<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <TextView
            style="@style/obligations_title_style"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:id="@+id/case_details_client"
            android:text="Client Name"/>

        <TextView
            style="@style/obligations_title_style"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/file"
            android:textSize="20dp"
            android:drawablePadding="10dp"
            android:id="@+id/case_details_name"
            android:text="Case Name"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/obligations_button"
            android:text="@string/obligations"
            style="@style/menu_card_button_style">
        </Button>

        <Button
            android:id="@+id/payments_button"
            android:text="@string/payments"
            style="@style/menu_card_button_style">
        </Button>
    </LinearLayout>


</LinearLayout>