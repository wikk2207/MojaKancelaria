<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
    <TextView
        android:id="@+id/case_details_client"
        style="@style/title_style"
        android:layout_margin="0dp"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="10dp"
        android:textAlignment="textStart"
        android:textSize="20dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:text="Jan Kowalski"/>

        <TextView
            style="@style/title_style"
            android:layout_margin="0dp"

            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/file"
            android:textSize="20dp"
            android:drawablePadding="10dp"
            android:id="@+id/case_details_name"
            android:text="Case Name"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/obligations_button"
            android:text="@string/obligations"
            style="@style/menu_card_button_style">
        </Button>

        <Button
            android:id="@+id/payments_button"
            android:text="@string/payments"
            style="@style/menu_card_button_style">
        </Button>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="25dp"
            >

            <Button
                android:id="@+id/archive_button"
                style="@style/small_menu_card_button_style"
                android:layout_weight="1"

                android:text="Archiwizuj"></Button>

            <Button
                android:id="@+id/report_button"
                style="@style/small_menu_card_button_style"
                android:layout_weight="1"
                android:drawableRight="@drawable/report"
                android:text="Raport"></Button>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>