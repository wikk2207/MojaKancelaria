<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/client_name_title"
            style="@style/double_title_style"
            android:drawableLeft="@drawable/user"
            android:text="Jan Kowalski"/>
`
        <TextView
            android:id="@+id/case_name_title"
            style="@style/double_title_style"
            android:drawableLeft="@drawable/file"
            android:text="Case Name"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/obligations_button"
            android:text="@string/obligations"
            style="@style/menu_card_button_style">
        </Button>

        <Button
            android:id="@+id/payments_button"
            android:text="@string/payments"
            style="@style/menu_card_button_style">
        </Button>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="25dp"
            >

            <TextView
                style="@style/small_menu_card_button_style"
                android:layout_weight="1"
                ></TextView>

            <Button
                android:id="@+id/report_button"
                style="@style/small_menu_card_button_style"
                android:layout_weight="1"
                android:drawableRight="@drawable/report"
                android:text="Raport"></Button>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>