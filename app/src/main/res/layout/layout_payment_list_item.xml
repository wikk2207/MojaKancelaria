<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/obligation_item"
        style="@style/list_item_style">
        <TextView
            android:text="Wpłata nr 234"
            android:id="@+id/payment_title"
            android:layout_alignParentStart="true"
            style="@style/obligation_title_style"/>

        <TextView
            android:id="@+id/obligation_amount"
            android:text="69,00zł"
            android:layout_alignParentEnd="true"
            style="@style/obligation_amount_style"/>
        <TextView
            android:id="@+id/payment_date"
            android:text="31.02.2020"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            style="@style/obligation_date_style"/>
    </RelativeLayout>
</LinearLayout>
