<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:id="@+id/adding_obligation_to_payment_dialog"
    >

    <TextView
        style="@style/adding_obligation_to_payment_label_style"
        android:text="@string/adding_obligation_to_payment_label"
        ></TextView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/obligations_to_choose_list_view"
        android:layout_weight="2">
    </ListView>

    <Button

        android:text="@string/cancel"
        android:layout_weight="0"
        style="@style/dialog_button_style"
        android:id="@+id/adding_obligation_to_payment_cancel_button"
        >
    </Button>

</LinearLayout>