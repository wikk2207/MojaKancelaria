<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/obligation_item"
        style="@style/payed_obligations_list_item_style"
        android:orientation="vertical">
        <TextView
            android:id="@+id/obligation_to_pay_amount"
            android:text="3000.00/5000.00zł"
            android:textSize="15sp"
            android:fontFamily="@font/quicksand_regular"
            style="@style/obligation_title_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"/>

        <TextView
            android:id="@+id/obligation_to_pay_title"
            style="@style/obligation_title_style"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="Umowa nr 234" />

        <TextView
            android:id="@+id/obligation_to_pay_case_and_type"
            android:text="Rozwód (umowa)"
            style="@style/obligation_date_style"/>
    </LinearLayout>
</LinearLayout>
