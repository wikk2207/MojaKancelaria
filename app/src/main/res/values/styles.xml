<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textViewStyle">@style/QuickSandTextViewStyle</item>
        <item name="android:buttonStyle">@style/QuickSandButtonStyle</item>
    </style>

    <style name="QuickSandTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="QuickSandButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>



    <!-- INPUT  -->
    <style name="input_style">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="settings_input_style">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textSize">20dp</item>
    </style>


    <!-- SEARCH INPUT  -->
    <style name="search_input_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textSize">20dp</item>
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:hint">@string/search</item>
    </style>

    <!-- TITLE -->
    <style name="title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:layout_margin">40dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <!-- DOUBLE TITLE -->
    <style name="double_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <!-- INFO -->
    <style name="info_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:layout_marginHorizontal">25dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:drawablePadding">10dp</item>
    </style>


    <!-- CLIENTS LIST ITEM -->
    <style name="clients_list_item_style">
        <item name="android:layout_width">@dimen/clients_list_item_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_list_item</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:layout_marginBottom">@dimen/clients_list_item_margin</item>
        <item name="android:layout_marginTop">@dimen/clients_list_item_margin</item>
    </style>

    <!-- OBLIGATIONS TITLE -->
    <style name="obligations_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <!-- OBLIGATIONS SUM -->
    <style name="sum_of_amounts_to_pay_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">17dp</item>
    </style>

    <!-- OBLIGATIONS AND PAYMENT LIST ITEM -->
    <style name="list_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_obligatios_list_item</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:backgroundTint">@color/topay</item>
    </style>

    <!-- OBLIGATION TEXTVIEW STYLE -->
    <style name="obligation_textview_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">7dp</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- OBLIGATION TITLE -->
    <style name="obligation_title_style" parent="obligation_textview_style">
        <item name="android:textSize">19dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <!-- OBLIGATION TYPE -->
    <style name="obligation_type_style" parent="obligation_textview_style"></style>

    <!-- OBLIGATION AMOUNT -->
    <style name="obligation_amount_style" parent="obligation_textview_style">
        <item name="android:textSize">19dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <!-- OBLIGATION TO PAY AMOUNT -->
    <style name="obligation_to_pay_amount_style" parent="obligation_textview_style">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <!-- OBLIGATION DATE -->
    <style name="obligation_date_style" parent="obligation_textview_style"></style>

    <!-- DETAILS LABEL -->
    <style name="details_label_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- DETAILS VALUE -->
    <style name="details_value_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <!-- PAYED OBLIGATIONS LIST ITEM -->
    <style name="payed_obligations_list_item_style">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_obligatios_list_item</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:backgroundTint">@color/topay</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- SPINNER -->
    <style name="spinner_style">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- DIALOG LABEL -->
    <style name="adding_obligation_to_payment_label_style">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">25dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>

    </style>

    <style name="payment_details_row_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>

    </style>

</resources>