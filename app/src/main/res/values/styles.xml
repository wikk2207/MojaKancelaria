<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textViewStyle">@style/QuickSandTextViewStyle</item>
        <item name="android:buttonStyle">@style/QuickSandButtonStyle</item>
    </style>

    <style name="QuickSandTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="QuickSandButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <!-- BUTTON  -->
    <style name="button_style">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
    </style>

    <!-- SMALL BUTTON -->
    <style name="small_button_style">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <!-- DIALOG BUTTON  -->
    <style name="dialog_button_style">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
    </style>

    <!-- CALENDAR BUTTON -->
    <style name="calendar_button_style">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:layout_margin">20dp</item>

    </style>

    <!-- MENU CARD BUTTON  -->
    <style name="menu_card_button_style">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">190dp</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">20dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">35dp</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
    </style>

    <!-- SMALL MENU CARD BUTTON  -->
    <style name="small_menu_card_button_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">19dp</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
    </style>

    <!-- BACKUP BUTTON  -->
    <style name="backup_button_style">
        <item name="android:layout_width">290dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginVertical">15dp</item>
        <item name="android:layout_marginHorizontal">15dp</item>

        <item name="backgroundTint">@color/dark_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
    </style>


    <!-- ADD BUTTON  -->
    <style name="add_button_style">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">48dp</item>
        <item name="android:text">+</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/rounded_add_button</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <!-- ARCHIVES BUTTON  -->
    <style name="archives_button_style">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">48dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/rounded_archives_button</item>
        <item name="android:src">@drawable/archives</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>



    <!-- ADD CLIENT BUTTON -->
    <style name="add_client_button_style">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">48dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/rounded_add_client_button</item>
        <item name="android:src">@drawable/ic_client_add</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>


    <!-- INPUT  -->
    <style name="input_style">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!-- SEARCH INPUT  -->
    <style name="search_input_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textSize">20dp</item>
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:hint">@string/search</item>
    </style>

    <!-- TITLE -->
    <style name="title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:layout_margin">40dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <!-- DOUBLE TITLE -->
    <style name="double_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <!-- INFO -->
    <style name="info_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:layout_marginHorizontal">25dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:drawablePadding">10dp</item>
    </style>


    <!-- CLIENTS LIST ITEM -->
    <style name="clients_list_item_style">
        <item name="android:layout_width">@dimen/clients_list_item_width</item>
        <item name="android:layout_height">@dimen/clients_list_item_height</item>
        <item name="android:background">@drawable/rounded_list_item</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/clients_list_item_margin</item>
        <item name="android:layout_marginTop">@dimen/clients_list_item_margin</item>
    </style>

    <!-- OBLIGATIONS TITLE -->
    <style name="obligations_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <!-- OBLIGATIONS SUM -->
    <style name="sum_of_amounts_to_pay_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">17dp</item>
    </style>

    <!-- OBLIGATIONS TYPE BUTTON -->
    <style name="obligations_type_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:backgroundTint">@color/dark_blue</item>
        <item name="android:background">@drawable/rounded_obligations_type</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:checked">true</item>
    </style>

    <!-- OBLIGATIONS AND PAYMENT LIST ITEM -->
    <style name="list_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/rounded_obligatios_list_item</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:backgroundTint">@color/topay</item>
    </style>

    <!-- OBLIGATION TEXTVIEW STYLE -->
    <style name="obligation_textview_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- OBLIGATION TITLE -->
    <style name="obligation_title_style" parent="obligation_textview_style">
        <item name="android:textSize">19dp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <!-- OBLIGATION TYPE -->
    <style name="obligation_type_style" parent="obligation_textview_style"></style>

    <!-- OBLIGATION AMOUNT -->
    <style name="obligation_amount_style" parent="obligation_textview_style">
        <item name="android:textSize">19dp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <!-- OBLIGATION DATE -->
    <style name="obligation_date_style" parent="obligation_textview_style"></style>

    <!-- DETAILS LABEL -->
    <style name="details_label_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- DETAILS VALUE -->
    <style name="details_value_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- PAYED OBLIGATIONS LIST ITEM -->
    <style name="payed_obligations_list_item_style">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:background">@drawable/rounded_obligatios_list_item</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:backgroundTint">@color/topay</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- SPINNER -->
    <style name="spinner_style">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- DIALOG LABEL -->
    <style name="adding_obligation_to_payment_label_style">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">25dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_semibold</item>

    </style>

</resources>