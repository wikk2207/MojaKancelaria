<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.piwniczna.mojakancelaria">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="Moja Kancelaria"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MojaKancelaria">
        <activity android:name="com.piwniczna.mojakancelaria.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.piwniczna.mojakancelaria.activities.MainActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:label="@string/app_name"></activity>


    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
</manifest>